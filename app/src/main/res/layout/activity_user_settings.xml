<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UserSettingsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:padding="0dp"
        app:cardCornerRadius="1000dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:0.65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="300dp">

        <ImageView
            android:id="@+id/profilePhotoPreviewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_profile_photo" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/namePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/shrikhand"
        android:text="UserName"
        android:textColor="@color/on_background"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Space
        android:id="@+id/space2"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/background_variant"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/cardChangeImage"
        app:layout_constraintStart_toStartOf="@+id/cardChangeName"
        app:layout_constraintTop_toBottomOf="@+id/namePreview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="TextView" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardChangeName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/primary"
        android:clickable="true"
        android:foreground="@drawable/ripple"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:0.4"
        app:layout_constraintEnd_toStartOf="@+id/space2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/space2"
        app:layout_constraintWidth_max="200dp">

        <Button
            android:id="@+id/changeNameContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/primary"
            android:clickable="false"
            android:contextClickable="false"
            android:enabled="false"
            android:fontFamily="@font/manrope_medium"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/change_name"
            android:textColor="@color/on_primary"
            android:textSize="15sp"
            app:icon="@drawable/icon_rename"
            app:iconGravity="textStart"
            app:iconPadding="2dp"
            app:iconTint="@color/on_primary"
            app:rippleColor="#00FFFFFF" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardChangeImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/primary"
        android:clickable="true"
        android:foreground="@drawable/ripple"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/space2"
        app:layout_constraintTop_toTopOf="@+id/space2"
        app:layout_constraintWidth_max="200dp">

        <Button
            android:id="@+id/changeImageContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/primary"
            android:clickable="false"
            android:contextClickable="false"
            android:enabled="false"
            android:fontFamily="@font/manrope_medium"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/change_pfp"
            android:textColor="@color/on_primary"
            android:textSize="15sp"
            app:icon="@drawable/icon_add_photo"
            app:iconGravity="textStart"
            app:iconPadding="2dp"
            app:iconTint="@color/on_primary" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogOut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/error"
        android:clickable="true"
        android:foreground="@drawable/ripple"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:0.25"
        app:layout_constraintEnd_toStartOf="@+id/cardLock"
        app:layout_constraintStart_toStartOf="@+id/cardChangeName"
        app:layout_constraintTop_toBottomOf="@+id/cardChangeImage"
        app:layout_constraintWidth_max="420dp">

        <Button
            android:id="@+id/logOutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/error"
            android:clickable="false"
            android:contextClickable="false"
            android:enabled="false"
            android:fontFamily="@font/manrope_medium"
            android:gravity="left|center_vertical"
            android:paddingStart="30dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/log_out"
            android:textColor="@color/on_error"
            android:textSize="15sp"
            app:icon="@drawable/icon_log_out"
            app:iconGravity="textStart"
            app:iconPadding="2dp"
            app:iconTint="@color/on_error" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/tertiary"
        android:clickable="true"
        android:foreground="@drawable/ripple"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardLogOut"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/cardChangeImage"
        app:layout_constraintTop_toBottomOf="@+id/cardChangeImage"
        app:layout_constraintWidth_max="200dp">

        <Button
            android:id="@+id/lockContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/tertiary"
            android:clickable="false"
            android:contextClickable="false"
            android:enabled="false"
            android:fontFamily="@font/manrope_medium"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:textColor="@color/on_tertiary"
            android:textSize="15sp"
            app:icon="@drawable/icon_rename"
            app:iconGravity="textStart"
            app:iconPadding="2dp"
            app:iconTint="@color/on_tertiary"
            app:rippleColor="#00FFFFFF" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>