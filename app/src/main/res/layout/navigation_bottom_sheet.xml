<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle"
    android:backgroundTint="@color/background">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dialog_background"
        app:cardCornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/nbs_contactsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/dialog_primary"
                android:fontFamily="@font/manrope_medium"
                android:text="contacts"
                android:textColor="@color/dialog_background"
                app:icon="@drawable/icon_people"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/dialog_background" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/nbs_joinWithCodeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/dialog_primary"
                android:fontFamily="@font/manrope_medium"
                android:text="settings"
                android:textColor="@color/dialog_background"
                app:icon="@drawable/icon_settings"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/dialog_background" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/nbs_optionsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/dialog_primary"
                android:fontFamily="@font/manrope_medium"
                android:maxEms="6"
                android:text="join with code"
                android:textColor="@color/dialog_background"
                app:icon="@drawable/icon_key"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/dialog_background" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>