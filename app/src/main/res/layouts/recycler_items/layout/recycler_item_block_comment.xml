<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Space
        android:layout_width="0dp"
        android:layout_height="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentItem_profilePictureImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="-15dp"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="@+id/cardView6"
        app:layout_constraintEnd_toStartOf="@+id/cardView6"
        app:layout_constraintTop_toTopOf="@+id/cardView6"
        app:srcCompat="@drawable/icon_play_arrow"
        app:tint="@color/background" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="1000dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/commentItem_profilePictureImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/commentItem_profilePictureImage"
        app:layout_constraintTop_toTopOf="@+id/commentItem_profilePictureImage">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="1000dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingEnd="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/commentItem_nameText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_medium"
                    android:gravity="bottom"
                    android:text="commenter name"
                    android:textColor="@color/on_background_variant" />

                <TextView
                    android:id="@+id/commentItem_contentText"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/manrope_medium"
                    android:gravity="center_vertical"
                    android:text="this is a text with a comment with a text"
                    android:textColor="@color/on_background"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>